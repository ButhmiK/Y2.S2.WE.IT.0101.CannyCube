<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#A5A3A3"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/black_logo___no_background" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="1dp"
        android:layout_marginTop="75dp"
        android:text="@string/textView2"
        android:textColor="#0C0C0C"
        />


    <EditText
        android:id="@+id/Expenses"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/Expenses"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#191818" />


    <EditText
        android:id="@+id/Week"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/Week"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#191818"
        />

    <EditText
        android:id="@+id/Month"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/Month"
        android:minHeight="48dp"
        android:textColorHint="#191818"
        android:inputType="textPersonName"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
         <Button
            android:id="@+id/ADD1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/CCBTNcolor"
            android:text="@string/ADD1" />

        <Button
            android:id="@+id/VIEW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/CCBTNcolor"
            android:text="@string/VIEW" />

        <Button
            android:id="@+id/UPDATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/CCBTNcolor"
            android:text="@string/UPDATE" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"


        >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>